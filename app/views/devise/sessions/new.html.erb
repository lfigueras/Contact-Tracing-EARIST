
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="flex items-center min-h-screen bg-white dark:bg-gray-900">
    <div class="container mx-auto">
        <div class="max-w-md mx-auto my-10">
            <div class="text-center">
                <h1 class="my-3 text-3xl font-semibold text-gray-700 dark:text-gray-200">Daily User Member</h1>
                <p class="text-gray-500 dark:text-gray-400">Sign in to access your account</p>
            </div>
            <div class="m-7">
                <form action="">
                    <div class="mb-6">
                        <%= f.label :email, :class => "block mb-2 text-sm text-gray-600 dark:text-gray-400" %>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"you@company.com", :class => "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500"  %>
                    </div>
                    <div class="mb-6">
                        <div class="flex justify-between mb-2">
                            <%= f.label :password, :class=> "text-sm text-gray-600 dark:text-gray-400" %>
                            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                            <%= link_to "Forgot your password?", new_password_path(resource_name), :class=> "text-sm text-gray-400 focus:outline-none focus:text-indigo-500 hover:text-indigo-500 dark:hover:text-indigo-300" %>
                            <% end %>
                            </div>
                        <%= f.password_field :password, autocomplete: "current-password", placeholder:"Your Password", :class => "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500"  %>
                    </div>
                      </div>
                    <div class="mb-6">
                        <%= f.submit "Sign in", :class=>"w-full px-3 py-4 text-white bg-red-900 rounded-md focus:bg-indigo-600 focus:outline-none" %>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>
<% end %>