<%= render "shared/alert" %>
<div class="text-center mt-5">
<a class="inline-block px-12 py-2 bg-red-900 hover:bg-red-600  rounded-full text-lg font-bold text-white transition duration-200" href="/healths/new", data-remote="true">Go to Health Declaration Form</a>

</a>
</div>

<div class="bg-white shadow-lg mx-auto pb-10 container overflow-hidden w-3/4 sm:rounded-lg">
  <div class=" px-4 py-5 sm:px-6">
    <h3 class="text-lg text-center leading-6 font-medium text-gray-900">
      Member's Information
    </h3>
    <p class="mt-1 text-center  text-sm text-gray-500">
      Personal details.
    </p>
  </div>
  <div class="border-t border-gray-200">
    <dl>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          Full name
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2" >
        <%= current_user.first_name %> <%= current_user.last_name %>
        </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
        Email
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
        <%= current_user.email %>
        </dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
        Complete Address
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
        <%= current_user.complete_address %>

        </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
        Student ID
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
        <%= current_user.id_number %>
        </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
      <dt class="text-sm font-medium text-gray-500">
      Contact Number
      </dt>
      <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
      <%= current_user.contact_num %>
      </dd>
    </div>
     
    
    </dl>
  </div>
</div>
